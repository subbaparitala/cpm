<center> <h3> Page to select the arbitary date range </h3> </center>
  <center> <div class='container'>
    <%= form_tag placements_search_path, method: :get, :class => 'position-form' do %>
      
      <div class="form-group">
        <label for="start_date">Start Date</label>
          <%= select_tag(:start_date, options_for_select(@dates) ) %>
      </div>

      <div class="form-group">
        <label for="end_date">End Date</label>
        <%= select_tag(:end_date, options_for_select(@dates) ) %>
      </div>

      <div class="form-group">
      <%= submit_tag "Search", name: nil %>
    </div>
    <% end %>

    <% if @deliveries[:total] > 0 %>
      <p> <%= @total %></p>

    <%end%>
  </div>
</center>

